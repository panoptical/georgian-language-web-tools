{
  "name": "GeoTrans",
  "manifest_version": 2,
  "version": "1.0",
  "icons": {
     "16": "geoflagsq16.png",
     "48": "geoflagsq48.png",
     "128": "geoflagsq128.png" },
  "description": "Transcribe Georgian texts with Latin characters.",
  "browser_action": {
    "default_icon": {
        "19": "geoflagsq19.png",
        "38": "geoflagsq38.png"
    },
    "default_popup": "popup.html"
  },

  "options_page": "options.html",

  "permissions": [
    "tabs",
    "<all_urls>",
    "storage"
  ],

  "content_scripts": [
   {
      "matches": ["<all_urls>"],
      "js": ["translit.js"],
      "run_at" : "document_end"
   }
]


}